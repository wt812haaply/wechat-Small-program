.bg {
	background-color: #eee;
}
.info {
	display: flex;
	justify-content: center;
	height: 200rpx;
	align-items: center;
	border-top: 1rpx solid #ddd;
	border-bottom: 1rpx solid #ddd;
	margin: 10rpx 0;
	box-shadow: 0 2px 5px #eeeeee;
	background-color: #ffffff;
}

.pic {
	width: 130rpx;
	height: 130rpx;
	border-radius: 50%;
	margin-left: 80rpx;
	margin-right: 50rpx;
}

.box {
	flex-direction: column;
	margin: 0 20rpx;
	flex: 2;
}

.name {
	line-height: 1.5em;
}

.text {
	line-height: 1.5em;
	font-size: 26rpx;
}

.my-line {
	height: 100rpx;
	display: flex;
	align-items: center;
	background-color: #ffffff;
	margin-bottom: 10rpx;
	
}
.my-line icon {
	margin-left: 30rpx;
	flex: 1;

}

.my-line .wenzi {
	flex: 8;
	font-size: 26rpx;
}
.my-line .more {
	flex: 1;
	margin-right: 30rpx;
	background-image: url(../../images/arrowright.png);
	background-position: center;
	background-repeat: no-repeat;
	height: 40rpx;
	
}