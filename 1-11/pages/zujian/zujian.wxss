/*list*/
.ab-list-title{
    font-size: 20px;
    color: #222;
    text-align: left;
    padding-left:12px;
}
.ab-list-con{
    border-top: 1px red solid;
    height: auto;
    float: left;
    width: 710rpx;
    padding: 0 20rpx;
    border-bottom:1px red solid;
}

.ab-list-a{
    border-bottom:1px red solid;
    /*margin: 0 10px;*/
    width: 100%;
    padding: 10px 0;
    float: left;

}

.ab-list-a:last-of-type{
    border-bottom:none;
}


/*弹出*/
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
