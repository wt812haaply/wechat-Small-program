page{
    background: #999;
}



radio{
    display: block;
}
checkbox{
    display: flex;
    flex-direction:row; 
}

/*list*/
.ab-list-title{
    font-size: 20px;
    color: #222;
    text-align: left;
    padding-left:12px;
}
.ab-list-con{
    border-top: 1px red solid;
    height: auto;
    float: left;
    width: 710rpx;
    padding: 0 20rpx;
    border-bottom:1px red solid;
}

.ab-list-a{
    border-bottom:1px red solid;
    /*margin: 0 10px;*/
    width: 100%;
    padding: 10px 0;
    float: left;

}

.ab-list-a:last-of-type{
    border-bottom:none;
}

/**/
.ab-list-radio{
    position: relative;
    top: -28px;
    display: block;
    height: 0;
    width: 100%;
 
}

.ab-li{
    height: 30px;
    line-height: 30px;
    background:rgba(0,0,0,.2);
}
.ab-list-con checkbox{
    /*border:1px red solid;*/
    display: block;
    border-radius: 50%;
}

.ab-list-a label{
    display: block;
}

/*picker*/

.ab-picker{
    height: 40px;
    line-height: 40px;
    float: left;
    width: 745rpx;   
    background:rgba(0,0,0,.2);
    border: 1rpx blue solid;
}

/*slider*/
.slider{
    color: red
}

.slider-value p{
    color: red;
    position: relative;
    top: -18px;
    float: right;
    right: 0px;
}

