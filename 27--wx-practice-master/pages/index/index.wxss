.img-box {
  text-align: center;
  padding: 20rpx;
  position: relative;
}

.img-box .avatar {
  position:relative;
  width: 80rpx;
  height: 80rpx;
  z-index: 1;
}

.img-box .bg {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.wx-panel {
  padding: 40rpx;
  background: #f0f0f0;
  margin-bottom: 10rpx;
}