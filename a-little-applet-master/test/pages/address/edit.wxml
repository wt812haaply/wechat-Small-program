
<!--pages/edit/edit.wxml-->

<!--引入模板-->
<import src="../../src/wetoast.wxml" />

<!--详细地址-->
<view class="edit-content">
  <form bindsubmit="formSubmit">

    <!--真实姓名-->
    <view class="section">

      <!--真实姓名文字的长度限制为max为6-->
      <view class="section__title">收货人</view>
      <view class="input-view">
        <input type="text" name="trueName" placeholder="真实姓名" maxlength="6" value="{{valueName}}" bindinput="nameChange" />
      </view>
    </view>

    <!--联系方式-->
    <view class="section">
      <view class="section__title">联系方式</view>

      <!--联系方式的长度限制为11-->
      <view class="input-view">
        <input type="number" name="truePhone" placeholder="联系方式" maxlength="11" value="{{valuePhone}}" bindinput="phoneChange" />
      </view>
    </view>

    <!--选择地区-->
    <view class="section">
      <view class="section__title">选择地区</view>
      <view class="input-view">
        <view>
          <view class="area" bindtap="open">{{province}}-{{city}}-{{county}}</view>
        </view>
      </view>
    </view>

    <!--详细地址-->
    <view class="section">
      <view class="section__title">详细地址</view>
      <view class="input-view-address">

        <!--详细地址的长度限制为20-->
        <input value="{{valueAddress}}" placeholder="详细地址填写" name="trueAddress" type="text" maxlength="20" bindinput="addressChange" />
      </view>
    </view>

    <!--邮政编码-->
    <view class="section">
      <view class="section__title">邮政编码</view>
      <view class="input-view">

        <!--邮政编码的长度限制为6-->
        <input value="{{valuePostCode}}" type="number" placeholder="邮政编码" maxlength="6" name="Postcode" />
      </view>
    </view>
    <view>
    </view>

    <!--确定按钮-->
    <button class="btnsub" formType="submit"> 确定 </button>
  </form>
</view>

<!--填写三联级地址的位置-->
<view wx:if="{{condition}}" class="citypicker">
  <picker-view indicator-style="height: 50px;" style="background-color:#eee; width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange" class="citybody">
    <view class="cityheader">
      <view bindtap="open" class="city-cancel">取消</view>
      <view bindtap="open" class="city-true">确定</view>
    </view>
    <picker-view-column>
      <view wx:for="{{provinces}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{countys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
  </picker-view>
</view>

<!--微信自定义的插件-->

<!-- wetoast -->
<template is="wetoast" data="{{...__wetoast__}}" />