page {
  background-color: #fff;
}

.box-align-center {
  -webkit-box-align: center;
  -moz-box-align: center;
}

.display-box-h {
  width: 100%;
  display: -moz-box;
  display: -webkit-box;
  display: box;
  -moz-box-orient: horizontal;
  -webkit-box-orient: horizontal;
  box-orient: horizontal;
}

.flex-one {
  -moz-box-flex: 1;
  -webkit-box-flex: 1;
  box-flex: 1;
}

.masterInfoCon {
  position: relative;
  padding: 30rpx;
}

.headerImgCon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  overflow: hidden;
  background-color: #999;
}

.headerImgCon image {
  width: 100%;
  height: 100%;
}

.masterInfo {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.masterPhone {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  background-color: #89ca12;
  background-image: url(../../images/phone_icon.png);
  background-size: 30rpx 30rpx;
  background-position: center;
  background-repeat: no-repeat;
}

.masterInfo_top {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.masterInfo_tip {
  color: #999;
  font-size: 28rpx;
}
.starCon{
  margin: 100rpx 0 40rpx;
  text-align: center;
}
.star_five {
  margin: 0 10rpx;
  position: relative;
  display: inline-block;
  color: red;
  width: 0px;
  height: 0px;
  border-right: 48rpx solid transparent;
  border-bottom: 34rpx solid #c7c7c7;
  border-left: 48rpx solid transparent;
  -webkit-transform: rotate(35deg);
  transform: rotate(35deg);
}

.star_five:before {
  border-right: 48rpx solid transparent;
  border-bottom: 34rpx solid #c7c7c7;
  border-left: 48rpx solid transparent;
  position: absolute;
  height: 0;
  width: 0;
  top: -0px;
  left: -48rpx;
  display: inline-block;
  content: '';
  -webkit-transform: rotate(-72deg);
  transform: rotate(-70deg);
}

.star_five:after {
  position: absolute;
  display: inline-block;
  top: 0px;
  left: -46rpx;
  width: 0px;
  height: 0px;
  border-right: 48rpx solid transparent;
  border-bottom: 34rpx solid #c7c7c7;
  border-left: 48rpx solid transparent;
  -webkit-transform: rotate(70deg);
  transform: rotate(74deg);
  content: '';
}

.star_active {
  border-bottom: 34rpx solid #ffda44;
}

.star_active:before {
  border-bottom: 34rpx solid #ffda44;
}

.star_active:after {
  border-bottom: 34rpx solid #ffda44;
}
.starTip{
  text-align: center;
  font-size: 36rpx;
  color: #666;
}
.starBtn{
  width: 80%;
  margin: 60rpx auto 30rpx;
}
.starBtn text{
  float: left;
  font-size: 28rpx;
  border: 1rpx solid #e4e4e4;
  color: #666;
  padding: 14rpx 30rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.starBtn_active{
  border: 1rpx solid #ffda44 !important;
  color: #ffda44 !important;
}
.textarea{
  width: 80%;
