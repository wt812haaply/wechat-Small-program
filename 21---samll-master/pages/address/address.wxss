page {
  color: #333;
  background-color: #efeff4;
}

.addressSelectCon {
  margin: 20rpx 0;
  padding-left: 30rpx;
  background-color: #fff;
}

.addressSelectCon_row {
  position: relative;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e4e4e4;
}

.addressSelectCon_row_l, .addressSelectCon_row_l_active {
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
  border: 1rpx solid #999;
}

.addressSelectCon_row_l_active {
  border: none;
  background-color: #89ca12;
}

