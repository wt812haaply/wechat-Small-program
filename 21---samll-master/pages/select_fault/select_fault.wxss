page {
  background-color: #f2f2f2;
}

.main {
  padding-left: 30rpx;
  background-color: #fff;
}

.title {
  line-height: 120rpx;
  border-bottom: 1rpx solid #e4e4e4;
}

.title text {
  font-size: 32rpx;
  font-weight: 700;
  margin-right: 10rpx;
}

.chooseFailureList {
  padding: 20rpx 30rpx 30rpx 0;
}

.chooseFailureList text {
  display: inline-block;
  font-size: 28rpx;
  border: 1rpx solid #e4e4e4;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  background-color: #fff;
}

.chooseFailureList .active {
  color: #ffda44;
  border: 1px solid #ffda44;
}

.detailFailureCon {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.detailFailure {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 90%;
  border-radius: 8rpx;
  -webkit-transform: translateX(-50%) translateY(-50%);
  transform: translateX(-50%) translateY(-50%);
  background-color: #fff;
}

.detailFailure_title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  padding: 40rpx 0 20rpx;
}

.detailFailure_content {
  min-height: 200rpx;
  max-height: 600rpx;
  overflow: auto;
}

.detailFailure_content view {
  line-height: 80rpx;
  font-size: 28rpx;
  border: 1rpx solid #e4e4e4;
  border-radius: 8rpx;
  width: 90%;
  margin: 20rpx auto;
  padding: 0 30rpx;
}

.detailFailure_content view.active {
  border: 1rpx solid #ffda44;
}

.detailFailure_content view.active text {
  color: #ffda44;
}

.detailFailure_content_r {
  float: right;
}

.detailFailure_content_tip {
  width: 90%;
  font-size: 24rpx;
  color: #999;
  margin: 20rpx auto;
}

.detailFailure_btn text {
  float: left;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: 36rpx;
  border-top: 1rpx solid #e4e4e4;
  color: #333;
}

.detailFailure_btn_l {
  color: #999 !important;
  border-right: 1rpx solid #e4e4e4;
}

/*其他故障弹窗*/

.detailFailure_ortherCon {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 3;
  /*display: -webkit-flex;
  -webkit-align-items: center;
  -webkit-justify-content: center;*/
}

.detailFailure_orther {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 90%;
  border-radius: 8rpx;
  -webkit-transform: translateX(-50%) translateY(-50%);
  transform: translateX(-50%) translateY(-50%);
  background-color: #fff;
}

.detailFailure_orther_title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  padding: 40rpx 0 20rpx;
}

.detailFailure_orther_textarea {
  width: 90%;
  border: 1rpx solid #e4e4e4;
  padding: 30rpx;
  font-size: 28rpx;
  margin: auto;
  background-color: #f8f8f8;
}

.detailFailure_orther_imgCon {
  width: 90%;
  margin: 30rpx auto;
}

.detailFailure_orther_imgCon view {
  position: relative;
  display: inline-block;
  vertical-align: top;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  border: 1rpx solid #e4e4e4;
  margin-right: 30rpx;
}

.detailFailure_orther_imgCon view image {
  width: 100%;
  height: 100%;
}

.detailFailure_orther_imgCon view text {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 100%;
  color: #fff;
  background-color: #ccc;
}

.addImg {
  line-height: 100rpx;
  font-size: 80rpx;
  font-weight: 700;
  color: #ccc;
}

.detailFailure_orther_btn {
  border-top: 1rpx solid #e4e4e4;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-top: 30rpx;
}

/*底部*/

.shade {
  position: fixed;
  left: 0;
  bottom: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0px;
  width: 100%;
  height: 100rpx;
  background-color: #ffda44;
  z-index: 2;
}

.footer_l {
  position: relative;
  float: left;
  width: 70%;
  height: 100rpx;
  background-color: #333;
}

.footer_l_imgCon {
  position: absolute;
  left: 30rpx;
  top: -30rpx;
  width: 102rpx;
  height: 102rpx;
  border-radius: 100%;
  /*overflow: hidden;*/
  background-color: #666;
}

.footer_l_imgCon image {
  width: 100%;
  height: 100%;
}

.footer_l_imgCon text {
  position: absolute;
  right: -0rpx;
  top: -0rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 100%;
  color: #333;
  background-color: #ffda44;
}

.footer_l_content {
  padding-left: 150rpx;
}

.footer_l_content1 {
  padding-left: 30rpx;
}

.footer_l_content_l {
  margin: 10rpx 0 6rpx;
}

.footer_l_content_l text {
  font-size: 32rpx;
  color: #fff;
}

.footer_l_content_price {
  color: #ffda44 !important;
  font-weight: 700;
}

.footer_l_content_tip {
  font-size: 28rpx;
  color: #999;
}

.footer_r {
  float: right;
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #333;
  font-size: 36rpx;
  font-weight: 700;
}

.comCon {
  position: fixed;
  left: 0;
  bottom: 99rpx;
  width: 100%;
  background-color: #fff;
}

.comCon::after {
  position: absolute;
  content: "";
  left: 60rpx;
  top: -38rpx;
  border-style: solid;
  border-color: transparent transparent #f9f9f9 transparent;
  border-width: 20rpx;
}

.comCon_t_imgCon {
  position: absolute;
  left: 30rpx;
  top: -132rpx;
  width: 102rpx;
  height: 102rpx;
  border-radius: 100%;
  background-color: #666;
}

.comCon_t_imgCon image {
  width: 100%;
  height: 100%;
}

.comCon_title {
  padding: 30rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
  background-color: #f9f9f9;
}

.comCon_rowCon {
  padding-left: 30rpx;
  max-height: 540rpx;
  overflow: auto;
}

.comCon_row {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e4e4e4;
}

.comCon_row text {
  font-size: 28rpx;
  color: #999;
}

.comCon_row_price {
  margin-left: 10rpx;
  color: #ffda44 !important;
}

.comCon_row_x {
  float: right;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 700;
  text-align: center;
  border-radius: 100%;
  border: 1rpx solid #e4e4e4;
  margin-top: -8rpx;
  margin-right: 30rpx;
}
