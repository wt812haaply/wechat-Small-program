page {
  font-size: 28rpx;
  color: #333;
  background-color: #efeff4;
}

.nav {
  border-bottom: 1rpx solid #e4e4e4;
  background-color: #fff;
}

.nav text {
  display: block;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  font-weight: 700;
}

.nav text.active {
  color: #ffda44;
  border-bottom: 3rpx solid #ffda44;
  margin-bottom: -1rpx;
}

.block {
  position: relative;
  margin: 25rpx 0;
  background-color: #fff;
  padding-left: 30rpx;
}

.selectCon {
  position: relative;
  height: 142rpx;
  line-height: 142rpx;
  padding-right: 30rpx;
}

.selectCon image, .selectCon text {
  display: inline-block;
  vertical-align: middle;
}

.selectCon image {
  width: 46rpx;
  height: 46rpx;
  margin-right: 20rpx;
}

.selectCon .text {
  color: #c7c7c7;
}

.addressCon {
  border-bottom: 1rpx solid #e4e4e4;
}

.arrows {
  position: absolute;
  right: 50rpx;
  top: 50%;
  width: 28rpx;
  height: 28rpx;
  border-width: 1rpx;
  border-color: #999 #999 transparent transparent;
  border-style: solid;
  -webkit-transform: rotate(45deg) translateY(-50%);
  transform: rotate(45deg) translateY(-50%);
}

.title {
  padding: 60rpx 0;
  border-bottom: 1rpx solid #e4e4e4;
}

.title text {
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
  margin-right: 10rpx;
}

.defalutCon {
  padding: 15rpx 0;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #e4e4e4;
}

.defalutCon_row {
  padding: 5rpx 0;
}

.defalutCon_row text {
  font-size: 28rpx;
  color: #666;
}

.defalutCon_row_r {
  float: right;
  color: #333 !important;
  font-weight: 700;
  margin-top: 10rpx;
}

.defalutImgCon {
  padding: 30rpx 0;
}

.defalutImgCon image {
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid #e4e4e4;
  margin-right: 20rpx;
}

.youCon {
  padding: 38rpx;
}

.youCon text:first-child {
  font-size: 32rpx;
  font-weight: 700;
}

.youCon_text {
  float: right;
  color: #999;
  margin-right: 40rpx;
  margin-top: 5rpx;
}

.priceCon {
  padding: 30rpx;
}

.priceCon view {
  padding: 10rpx 0;
}

.priceCon_r {
  float: right;
  font-weight: 700;
}

.priceCon_tip {
  font-size: 24rpx;
  color: #999;
}

.leaveWord {
  padding: 30rpx;
}

.leaveWord text {
  float: left;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 10rpx;
}

.leaveWord input {
  padding-left: 100rpx;
  height: 28rpx;
  line-height: 28rpx;
}

.placeholder {
  color: #c7c7c7;
}

.footer_visit {
  height: 100rpx;
  line-height: 100rpx;
  background-color: #333;
}

.footer_visit view {
  float: left;
  height: 100rpx;
  line-height: 100rpx;
}

.footer_visit_l {
  width: 70%;
  background-color: #333;
  padding-left: 30rpx;
}

.footer_visit_l_price {
  color: #ffda44;
  font-size: 32rpx;
  font-weight: 700;
}

.footer_visit_l_you {
  color: #999;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.footer_visit_r {
  width: 30%;
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  background-color: #ffda44;
}
.footer_visit_r:active{
  background-color: #f0da44;
}
/*时间蒙层*/

.timeShade {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}

.timeSelectCon {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  background-color: #fff;
}

.timeSelect_l {
  float: left;
  width: 40%;
  height: 400rpx;
  text-align: center;
  overflow-y: auto;
  background-color: #f2f2f2;
}

.timeSelect_l>view, .timeSelect_r>view {
  line-height: 80rpx;
  color: #999;
}

.timeSelect_l>view.active {
  color: #333;
  background-color: #fff;
}

.timeSelect_r>view.active {
  color: #ffda44;
}

.timeSelect_r {
  float: left;
  width: 60%;
  height: 400rpx;
  text-align: center;
  overflow-y: auto;
}

.timeSelect_btn {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: center;
  border-top: 1rpx solid #e4e4e4;
}
.timeSelect_btn:active{
  background-color: #f2f2f2;
}