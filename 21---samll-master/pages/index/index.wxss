/**index.wxss**/

page {
  background-color: #efeff4;
}

swiper {
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.flow {
  padding: 30rpx 0;
  background-color: #fff;
}

.flow image {
  width: 100%;
  height: 133rpx;
  margin: 0rpx 0 30rpx;
}

.btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
  border-radius: 8rpx;
  margin: auto;
  color: #000;
  background-color: #ffda44;
}

.btn:active {
  background-color: #d8b839;
}

.hotCon {
  margin: 30rpx 0;
  background-color: #fff;
}

.hot {
  height: 325rpx;
  font-size: 28rpx;
}

.hotTitle {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e4e4e4;
}

.hot_l, .hot_r {
  float: left;
  width: 50%;
  height: 325rpx;
}

.hot_l {
  text-align: center;
  border-right: 1rpx solid #e4e4e4;
}

.hot_l image {
  display: block;
  width: 210rpx;
  height: 210rpx;
  margin: 20rpx auto;
}

.hot_r view {
  height: 162rpx;
  line-height: 162rpx;
}

.hot_r1 {
  border-bottom: 1rpx solid #e4e4e4;
}

.hot_r view image {
  display: inline-block;
  vertical-align: middle;
  width: 120rpx;
  height: 120rpx;
}
.silde{
    margin: 30rpx 0 60rpx;
    background-color: #fff;    
}
.silde>view{
    float: left;
    width: 33.3%;
    font-size: 28rpx;
    text-align: center;
    padding-bottom: 30rpx;
}
.silde>view:active{
  background-color: #fafafa;
}
.imgCon{
    position: relative;
    display: block;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    background-color: #e4e4e4;
    margin: 30rpx auto 20rpx;
    padding-top: 20rpx;
}
.imgCon image{
    position: relative;
    display: block;
    width: 60rpx;
    height: 60rpx;
    margin:  auto;
}
.b_r{
    border-right: 1rpx solid #e4e4e4;
}