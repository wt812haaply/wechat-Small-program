page {
  background-color: #f2f2f2;
}

.rowCon {
  border-bottom: 1rpx solid #e4e4e4;
}

.row_title {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  padding: 0 30rpx;
}

.row_title_l {
  color: #999;
}

.row_title_m {
  margin-left: 30rpx;
}

.row_title_r {
  float: right;
  width: 20rpx;
  height: 20rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: transparent transparent #e4e4e4 #e4e4e4;
  transform: rotate(-45deg);
  margin-top: 30rpx;
}

.row_content {
  padding: 20rpx 30rpx 30rpx;
  height: auto;
  overflow: hidden;
}

.row_content text {
  display: inline-block;
  border: 1rpx solid #e4e4e4;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  background-color: #fff;
}

.row_content text:active {
  color: #ffda44;
  /*background-color: #ffda44;*/
}

.row_content .active {
  color: #ffda44;
  border: 1px solid #ffda44;
}
