    @-webkit-keyframes ripple {
      100% {
        -webkit-transform: scale(15);
        transform: scale(15);
      }
    }
    @keyframes ripple {
      100% {
        -webkit-transform: scale(15);
        transform: scale(15);
      }
    }


    @-webkit-keyframes ripple-reset {
      100% {
        -webkit-transform: scale(0);
        transform: scale(0);
