/**app.wxss**/

/* reset */

page {
  background-color: #fcf9fe;
  height: 100%;
  font-size: 34rpx;
  line-height: 1.6;
  position: relative;
  color: #666;
}

checkbox, radio {
  margin-right: 10rpx;
}

button {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

form {
  width: 100%;
}

.txt-hid {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* lib */

.strong {
  font-weight: bold;
}

.tc {
  text-align: center;
}

/* page */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.btn-area {
  margin: 0 30rpx;
}

button[type=primary].btn-bind {
  background-color: #3a59a6;
}

.input-ph {
  font-size: 28rpx;
}

.other-navigator-hover {
  color: red;
}

.show {
  display: block;
}

.hide {
  display: none;
}
