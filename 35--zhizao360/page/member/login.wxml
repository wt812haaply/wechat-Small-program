<view class="section-body">
  <view class="section">
    <text class="section-txt">手机</text>
    <input type="number" class="section-input" value="{{Mobile}}" bindinput="bindMobile" id="mobile" placeholder="11位手机号码" maxlength="11" auto-focus/>
    <button class="btn_code" bindtap="EventCode" disabled="{{disabled}}">{{codeTxt}}</button>
  </view>
  <view class="section">
    <text class="section-txt">验证码</text>
    <input type="number" class="section-input" id="code" bindinput="bindCode"  placeholder="手机验证码" maxlength="4" />
  </view>
  <view wx:if="{{register}}" class="section">
    <text class="section-txt">企业全称</text>
    <input type="text" class="section-input" id="name" bindinput="bindName" placeholder="填写单位全称" />
  </view>
</view>
<view wx:if="{{companyName}}" class="section section-type">
    <picker bindchange="accountType" value="{{index}}" disabled="{{disabled_picker}}" range="{{array}}">
      <view class="picker">
        <text class="section-txt">账号类型</text>
        <text class="section-input">{{array[index]}}</text>
        <text class="icon-arrows">></text>
      </view>
    </picker>
  </view>
<view bindtap="Eventbinding" class="btn-area">
  <button type="primary"  class="btn-bind">绑定</button>
</view>