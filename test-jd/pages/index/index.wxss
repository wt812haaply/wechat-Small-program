page {
  background: #eee;
}

.top {
  height: auto;
  background: #ff544b;
  padding: 40rpx 20rpx;
}

.logo-top {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-content: center;
}

.logo-top image {
  width: 288rpx;
  height: 80rpx;
}

.search-top input {
  height: 36rpx;
  border-radius: 30px;
  background: #fff;
  padding: 10rpx;
  text-align: center;
  font-size: 14px;
  margin-top: 40rpx;
}

.sc-con {
  white-space: nowrap;
  display: flex;
  display: block;
  height: auto;
  padding:10px 0;
  margin-top: 20rpx;
}

.sc-conList {
  width: 18%;
  padding: 1%;
  height: 150rpx;
  display: inline-block;
}

.sc-conList view {
  display: flex;
  align-content: center;
  justify-content: center;
}

.sc-conList image {
  width: 100%;
  height: 150rpx;
}
.content{
  width: 100%;
  background: #999
}
.con-title,.con-time{
  display: flex;
  justify-content: center;
  align-content: center;
}
.con-time{
  width: 100%;
  display: flex;
  height: 100px;
  background: red;
  flex-wrap: wrap;
}
.con-time view{
  width: 100%;
  display: flex;
  justify-content: center;
  align-content: center;
}

.con-content{
  display: flex;
  /* width: 100%; */
  background: #fff;
  padding: 10px;
  -moz-box-shadow:0px 0px 8px red; 
  -webkit-box-shadow:0px 0px 8px red; 
  box-shadow:0px 0px 8px red;
  margin-bottom: 40rpx;
}
.con-content-L{
  width: 200rpx;
  height: 200rpx;
  background: green;
  display: flex; 
  position: relative;
}
.woc{
  position: absolute;
  left: -5px;
  top: -5px;
  width: 40px;
  height: 20px;
  background: yellow;
  font-size: 12px;
  justify-content: center;
  align-items: center;
  display: flex;
}
.con-content-L image{
  width: 100%;
  height: 200rpx;
}
.con-content-R{
  width: 550rpx; 
  height: auto;
  display: flex;
  flex-wrap: wrap;
  padding-left:20rpx;
}

.h2,
.h3,
.h4
{
width:100%;
display:flex;
justify-content:flex-start;
align-content:center;
font-size: 12px;
}
.h33{
  color: red;
  font-size: 12px;
  display: flex;
  align-items: flex-end;
}
.h2{
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;  /*2è¡Œ*/
overflow: hidden;
}

.h5 button{
  height: 40rpx;
  line-height: 40rpx;
  background: red;
  border:0px red solid;
  border-radius: 0px;
  font-size: 12px;
  color: #fff;
}





